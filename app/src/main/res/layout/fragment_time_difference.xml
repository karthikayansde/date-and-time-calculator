<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    tools:context=".TimeDifferenceFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/top_of_nav">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:text="Time Difference"
                android:textSize="30dp" />
        </RelativeLayout>
        //-------------------------------------------------
        <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
            android:textColor="@color/bt"
        android:text="Enter the 1st time : "
        android:textSize="30dp"/>
        <RelativeLayout
            android:id="@+id/timePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/for_card"
            android:layout_below="@id/tv1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">
            <TextView
                android:id="@+id/timetv1"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:text="TIME : "
                android:textSize="21dp"/>
            <TextView
                android:id="@+id/edittime1"
                android:ems="5"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/timetv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:textSize="21dp"/>
            <ImageView
                android:id="@+id/imgtbtn1"
                android:layout_toEndOf="@id/edittime1"
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/time"
                android:tint="@color/bt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondsPicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/for_card"
            android:layout_below="@id/tv1"
            android:layout_toEndOf="@id/timePicker"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <TextView
                android:id="@+id/timetvss1"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:text="SS : "
                android:textSize="21dp"/>
            <!--            <TextView-->
            <!--                android:id="@+id/ss"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textSize="21dp"-->
            <!--                android:layout_toEndOf="@id/timetvss"-->
            <!--                android:layout_marginStart="5dp"-->
            <!--                android:ems="1"/>-->
            <Spinner
                android:id="@+id/spinnerss1"
                android:layout_toEndOf="@id/timetvss1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        /---------------------------------------------------------------
        <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timePicker1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
            android:textColor="@color/bt"
        android:text="Enter the 2nd time : "
        android:textSize="30dp"/>
        <RelativeLayout
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/for_card"
            android:layout_below="@id/tv2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">
            <TextView
                android:id="@+id/timetv"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:text="TIME : "
                android:textSize="21dp"/>
            <TextView
                android:id="@+id/edittime"
                android:ems="5"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/timetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:textSize="21dp"/>
            <ImageView
                android:id="@+id/imgtbtn"
                android:layout_toEndOf="@id/edittime"
                android:paddingEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/time"
                android:tint="@color/bt"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondsPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/for_card"
            android:layout_below="@id/tv2"
            android:layout_toEndOf="@id/timePicker"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">
            <TextView
                android:id="@+id/timetvss"
                android:layout_marginStart="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/shadow"
                android:text="SS : "
                android:textSize="21dp"/>
            <!--            <TextView-->
            <!--                android:id="@+id/ss"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:textSize="21dp"-->
            <!--                android:layout_toEndOf="@id/timetvss"-->
            <!--                android:layout_marginStart="5dp"-->
            <!--                android:ems="1"/>-->
            <Spinner
                android:id="@+id/spinnerss"
                android:layout_toEndOf="@id/timetvss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        //-----------------------------------------------------------------

        <Button
            android:id="@+id/btn"
            android:layout_marginTop="15dp"
            android:layout_below="@id/secondsPicker"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="calculate"
            android:drawableTint="@color/td"
            android:textColor="@color/td"
            android:backgroundTint="@color/bt"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/resulttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn"
            android:layout_marginStart="10dp"
            android:textColor="@color/bt"
            android:text="RESULTS : "
            android:textSize="30dp"/>

        <RelativeLayout
            android:id="@+id/ansArea"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resulttv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <RelativeLayout
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/for_card"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/d1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="days "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/dans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/d1"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/r1">

                    <TextView
                        android:id="@+id/h1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="hours "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/hans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/h1"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/r2">

                    <TextView
                        android:id="@+id/m1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="munites "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/mans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/m1"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/r3">

                    <TextView
                        android:id="@+id/s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="seconds "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/sans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/s1"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/for_card"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <RelativeLayout
                    android:id="@+id/sr1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/d2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="days "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/dans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/d2"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sr2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/sr1">

                    <TextView
                        android:id="@+id/h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="hours "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/hans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/h2"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sr3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/sr2">

                    <TextView
                        android:id="@+id/m2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="munites "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/mans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/m2"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sr4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_toEndOf="@id/sr3">

                    <TextView
                        android:id="@+id/s2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shadow"
                        android:text="seconds "
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/sans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/s2"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:ems="2"
                        android:textColor="@color/shadow"
                        android:textAlignment="center"
                        android:textSize="25dp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>